{
  "name": "credithopper-backend",
  "version": "1.0.0",
  "description": "CreditHopper Credit Repair Platform - Backend API",
  "main": "src/index.js",
  "scripts": {
    "preflight": "node scripts/preflight.js",
    "build": "echo 'Build step - no Prisma generate needed at build time'",
    "postinstall": "prisma generate || true",
    "migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "start": "node src/index.js",
    "start:prod": "npm run preflight && npm run db:push && npm run start",
    "start:simple": "npm run preflight && npm run start",
    "dev": "nodemon src/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset"
  },
  "keywords": [
    "credit-repair",
    "dispute-letters",
    "fcra",
    "fdcpa"
  ],
  "author": "CreditHopper",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@prisma/client": "^6.2.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.0",
    "pdfkit": "^0.15.0",
    "prisma": "^6.2.1",
